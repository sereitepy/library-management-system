generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
  PENDING_ADMIN
}

enum TransactionStatus {
  PENDING_PICKUP
  BORROWED
  RETURNED
  CANCELLED
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String   // Store hashed later with bcrypt, right now we only need static logic
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  transactions BorrowingTransaction[]

  @@index([email])
  @@map("users")
}

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  books Book[]

  @@index([slug])
  @@map("categories")
}

model Book {
  id              String   @id @default(cuid())
  title           String
  author          String
  isbn            String   @unique
  description     String?  @db.Text
  coverImageUrl   String?
  totalCopies     Int      @default(1)
  availableCopies Int      @default(1)
  categoryId      String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  category     Category               @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  transactions BorrowingTransaction[]

  @@index([categoryId])
  @@index([isbn])
  @@index([title])
  @@map("books")
}

model BorrowingTransaction {
  id              String            @id @default(cuid())
  userId          String
  bookId          String
  status          TransactionStatus @default(PENDING_PICKUP)
  requestDate     DateTime          @default(now())
  pickupDeadline  DateTime
  borrowedDate    DateTime?
  dueDate         DateTime?
  returnedDate    DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([bookId])
  @@index([status])
  @@index([dueDate])
  @@map("borrowing_transactions")
}
